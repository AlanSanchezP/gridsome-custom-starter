@import 'fonts'
/*  Not importing vars and mixins since
    gridsome.config.js already does that for us */

*
  box-sizing border-box

html
  color $defaultTextColor
  font-weight $medium
  font-size clamp(
    unit($minRootFontSize, 'px'), // Min
    calc((2px + 2.6vw + 2.6vh) / 3), // Preferred
    unit($maxRootFontSize, 'px')) // Max

  @media screen and (min-width: $bigScreenAt)
    font-size calc(0.88vw + 0.88vh)

body
  color inherit
  font-family inherit
  font-weight inherit
  font-size inherit

input, button, textarea
  font-family inherit // TODO: REMOVE

a
  &, &:focus, &:hover, &:active
    text-decoration none

h1, h2, h3, h4
  margin 0

p
  font-size 1.25rem
  margin-top 0

.page-title
  color $primaryThemeColor
  font-weight $heavy
  font-size remify(32)
  margin 0

// TODO: Handle labels properly
label.error
  color $errorColor
  display block
  padding-top 0.3em

.form-message
  display block
  margin-top 1em

  &--error
    color $errorColor

  &--success
    color $successColor

.form-item
  display block
  text-align center
  width 100%

  &__input
    line-height 1
    width 100%

    ../--error &
      border-color $errorColor !important
    
    ../--success &
      border-color $successColor !important
  
  &__message
    text-align left
    margin-top 0.25em

    ../--error &
      color $errorColor

.form-submit
  &__message
    text-align center

    &--error
      color $errorColor

    &--success
      color $successColor

  &__spinner
    color $primaryThemeColor
    display block
    center-block()

.site-button
  cursor pointer
  border-radius remify(5)
  display inline-block
  font-weight $heavy
  line-height 1
  outline none
  padding 1.2em 2.8em
  transition background-color 0.2s, border-color 0.2s, color 0.2s
  simple-border('all', remify(2), transparent)

  &--default
    background-color $primaryThemeColor
    border-color $primaryThemeColor
    color $inverseTextColor

    &:hover, &:active
      background-color darken($primaryThemeColor, 20%)
      border-color darken($primaryThemeColor, 20%)

  &--transparent
    background-color transparent
    border-color $primaryThemeColor
    color $primaryThemeColor

    &:hover, &:active
      background-color $primaryThemeColor
      color $inverseTextColor

  &--transparent-inverse
    background-color transparent
    color $inverseTextColor
    border-color $inverseTextColor

    &:hover, &:active
      background-color $inverseTextColor
      color $primaryThemeColor

textarea
  resize none

@media screen and (min-width: 481px)
  .form-item
    text-align left

@import 'utils'