.content-collection
  display flex
  align-items flex-start
  justify-content space-around
  flex-wrap wrap
  center-block()

  &-item
    background $lightShadowColor
    color $defaultTextColor
    max-width 363px
    flex-basis 100%
    margin-top remify(40)

    & > a
      color inherit

    &__title
      font-size remify(19)
      padding 0.5em 0.4em
      font-weight $medium
      text-align center

    &__photo
      height remify(266)
      width 100%

    &__info
      position relative
      text-align left

    &__avatar
      float left
      height remify(88)
      margin-left 0.8em
      margin-right 1.6em
      margin-top -2.6em
      width @height
      shape-outside circle(50% at top)
      simple-border('all', remify(3), $lightShadowColor)

    &__excerpt
      font-weight $light
      font-size remify(16)
      margin 1.2em
      margin-top 0.6em

@media screen and (min-width: $bigScreenAt)
  .content-collection-item
    max-width 30vw