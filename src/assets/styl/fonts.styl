@font-face
  font-family 'Lato'
  font-style normal
  font-weight $_regular
  src local('☺︎'),
    url('../fonts/Lato-Regular.ttf') format('truetype'),
    url('../fonts/Lato-Regular.woff') format('woff'),
    url('../fonts/Lato-Regular.woff2') format('woff2')

@font-face
  font-family 'Lato'
  font-style italic
  font-weight $_bold
  src local('☺︎'),
    url('../fonts/Lato-Bold-Italic.woff2') format('woff2'),
    url('../fonts/Lato-Bold-Italic.woff') format('woff'),
    url('../fonts/Lato-Bold-Italic.ttf') format('truetype')

@font-face
  font-family 'Avenir'
  font-style normal
  font-weight $_heavy
  src url('../fonts/AvenirLTStd-Heavy.woff') format('woff')